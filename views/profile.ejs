<!doctype html>
<html>
<head>
    <title>Barista App</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
      <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
</head>
  <body>
    <span style="display:none" class="userEmail"><%= user.local.email %></span>
    <header>
      <h1>Cafe Ol√©</h1>
      <section>
        <a href="/logout" id="button" class="btn btn-default">logout</a>
      </section>
    </header>
    <section class="queue">
      <h3>Order Queue</h3>
      <ul class="orders">
        <% for(var i=0; i < orders.length; i++) {%>
          <% if(orders[i].completed === undefined){ %>
              <li class="order">
                <span><%= orders[i].customer %></span>
                <span><%= orders[i].order %></span>
              </li>
              <% } %>
        <% } %>
      </ul>
    </section>
    <section class="completed">
      <h3>Completed Orders</h3>
      <ul class="orders red">
          <% for(var i=0; i< orders.length; i++) {%>
            <% if (orders[i].completed === true && user.local.email == orders[i].name) { %>
              <li>
                <span><%= orders[i].name %></span>
                <span><%= orders[i].customer %></span>
                <span><%= orders[i].order %></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </li>
            <% } %>
          <% } %>
      </ul>
    </section>
    <script src="main.js"></script>
  </body>
</html>
